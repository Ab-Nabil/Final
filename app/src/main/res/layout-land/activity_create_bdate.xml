<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/createprofilebackground"
    tools:context=".CreateProfile.CreateBdateActivity">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backrow"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/bDateBackRow"
        />
    <RelativeLayout
        android:layout_below="@+id/bDateBackRow"
        android:id="@+id/bDateTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:autoSizeTextType="uniform"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/textcreate"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE YOUR PROFILE"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            />
        <ImageView
            android:layout_margin="5dp"
            android:layout_below="@+id/textcreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/cp4"
            android:id="@+id/genderp4"
            />

        <TextView
            android:layout_margin="5dp"
            android:autoSizeTextType="uniform"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_below="@+id/genderp4"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR \nBIRTH-DATE ?"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bDateForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@+id/bDateTitle"
        android:layout_above="@+id/bDateForwardRow"
        android:gravity="center"
        >

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:id="@+id/bDateImage"
            android:src="@drawable/bdateimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
             />
        <EditText
            android:id="@+id/bDateEditText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/enterdata"
            android:hint="ENTER YOUR BIRTH DATE ..."
            android:inputType="date"

            android:layout_alignParentBottom="true"
            android:layout_below="@+id/bDateImage"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"

            android:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorGray"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/bDateForwardRow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:src="@drawable/forwardrow" />
</RelativeLayout>